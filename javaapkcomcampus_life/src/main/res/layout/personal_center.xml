<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/activity_title" />

    <TextView
        android:id="@+id/collection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_first_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="我的收藏"
        android:drawableLeft="@drawable/favourites01_64"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/publish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_middle_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="我的发布"
        android:drawableLeft="@drawable/fb01_64"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_middle_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="我的留言"
        android:drawableLeft="@drawable/ly02_64"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/look"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_middle_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="我的心愿"
        android:drawableLeft="@drawable/wdxy01_64"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/my"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_middle_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="我的信息"
        android:drawableLeft="@drawable/city"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_last_selector"
        android:drawableRight="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="修改密码"
        android:drawableLeft="@drawable/ly01_64"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grzx"
        android:text="" />

</LinearLayout>